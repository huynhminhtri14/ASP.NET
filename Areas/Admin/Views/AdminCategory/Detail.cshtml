@model HuynhMinhTri_2122110256.Models.Category

@{
    ViewBag.Title = "Category Details";
}

<div class="container mt-5">
    <h4 class="text-center mb-4"><b>Chi tiết danh mục</b></h4>
    <hr />
    <div class="row card">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Tên danh mục:</label>
                <div class="col-sm-8">
                    <p>@Html.DisplayFor(model => model.categoryName)</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Thuộc sản phẩm:</label>
                <div class="col-sm-8">
                    @if (Model.typeId == 1)
                    {
                        <p> Danh mục phổ biến</p>

                    }
                    else
                    {
                        <p> Danh mục mới</p>
                    }
                    
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Mô tả:</label>
                <div class="col-sm-8">
                    <p>@Html.DisplayFor(model => model.description)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-2 font-weight-bold">Hình ảnh:</label>
                <div class="col-sm-10">
                    <img src="~/Content/images/category/@Model.image" alt="Category Image" class="img-fluid" style="max-width: 200px;" />
                </div>
            </div>
        </div>
    </div>

    <p class="text-center mt-4">
        @Html.ActionLink("Chỉnh sửa", "Edit", "AdminCategory", new { id = Model.category_id }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </p>
</div>
