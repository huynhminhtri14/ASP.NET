@model HuynhMinhTri_2122110256.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<div class="container mt-3">
    <h2 class="text-danger text-center">Xóa danh mục</h2>

    <h3 class="text-center text-warning">Bạn chắc chắn muốn xóa danh mục này?</h3>

    <div class="card mt-4 p-4">
        <h4 class="text-center">Chi tiết danh mục</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Tên danh mục:</label>
                    <div class="col-sm-8">
                        <p>@Html.DisplayFor(model => model.categoryName)</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Thuộc sản phẩm:</label>
                    <div class="col-sm-8">
                        @if (Model.typeId == 1)
                        {
                            <p> Danh mục phổ biến</p>

                        }
                        else
                        {
                            <p> Danh mục mới</p>
                        }

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Mô tả:</label>
                    <div class="col-sm-8">
                        <p>@Html.DisplayFor(model => model.description)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-2 font-weight-bold">Hình ảnh:</label>
                    <div class="col-sm-10">
                        <img src="~/Content/images/category/@Model.image" alt="Category Image" class="img-fluid" style="max-width: 200px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center my-4">
        @using (Html.BeginForm("Delete", "AdminCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger btn-lg">Xóa</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg ml-3">Quay về danh sách</a>
        }
    </div>
</div>
