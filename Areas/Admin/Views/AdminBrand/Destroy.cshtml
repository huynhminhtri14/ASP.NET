@model HuynhMinhTri_2122110256.Models.Brand

@{
    ViewBag.Title = "Destroy";
}

<div class="container text-center">
    <div class="mt-4">
        <h2 class="text-center">Xóa thương hiệu ra khỏi cơ sở dữ liệu</h2>

        <div class="card text-center p-4">
            <h4 class="text-danger text-center">Bạn có chắc chắn muốn xóa vĩnh viễn thương hiệu này?</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên thương hiệu:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.brandName)
                </dd>
            </dl>

            <div class="form-actions">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">Xóa</button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteLabel">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa thương hiệu này? Hành động này không thể hoàn tác.
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Destroy", "AdminBrand", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.id)
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                }
            </div>
        </div>
    </div>
</div>
