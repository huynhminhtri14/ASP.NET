@model HuynhMinhTri_2122110256.Models.Brand

@{
    ViewBag.Title = "Brand Details";
}

<div class="container mt-5">
    <h4 class="text-center mb-4"><b>Chi tiết thương hiệu</b></h4>
    <hr />
    <div class="row card">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Tên thương hiệu:</label>
                <div class="col-sm-8">
                    <p>@Html.DisplayFor(model => model.brandName)</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Tình trạng:</label>
                <div class="col-sm-8">
                    @if (Model.status == 1)
                    {
                        <p> Hoạt động</p>

                    }
                    else
                    {
                        <p>Hủy hợp tác</p>
                    }

                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Mô tả:</label>
                <div class="col-sm-8">
                    <p>@Html.DisplayFor(model => model.description)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-2 font-weight-bold">Hình ảnh:</label>
                <div class="col-sm-10">
                    <img src="~/Content/images/brand/@Model.image" alt="Category Image" class="img-fluid" style="max-width: 200px;" />
                </div>
            </div>
        </div>
    </div>

    <p class="text-center mt-4">
        @Html.ActionLink("Chỉnh sửa", "Edit", "AdminBrand", new { id = Model.id }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </p>
</div>
