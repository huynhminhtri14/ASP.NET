@model HuynhMinhTri_2122110256.Models.User

@{
    ViewBag.Title = "User Details";
}

<div class="container mt-5">
    <h4 class="text-center mb-4"><b>Chi tiết danh mục</b></h4>
    <hr />
    <div class="row card">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Tên người dùng:</label>
                <div class="col-sm-8">
                    <p>@Model.first_name @Model.last_name</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Địa chỉ:</label>
                <div class="col-sm-8">
                    <p>@Model.address</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Số điện thoại:</label>
                <div class="col-sm-8">
                    <p>@Model.phone</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Email:</label>
                <div class="col-sm-8">
                    <p>@Model.email</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 font-weight-bold">Quyền hạn:</label>
                <div class="col-sm-8">
                    @if (Model.role == 1)
                    {
                        <p> Admin</p>

                    }
                    else
                    {
                        <p> Khách hàng</p>
                    }

                </div>
            </div>
            
        </div>

        <p class="text-center mt-4">
            @Html.ActionLink("Chỉnh sửa", "Edit", "AdminUser", new { id = Model.id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Xem đơn hàng", "Order", "AdminOrder", new { id = Model.id }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </p>
</div>
