@model HuynhMinhTri_2122110256.Models.User
@{
    ViewBag.Title = "Restore";
}

<div class="container mt-3">
    <h2 class="text-success text-center">Khôi phục người dùng</h2>

    <h3 class="text-center text-warning">Bạn chắc chắn muốn khôi phục người dùng này?</h3>

    <div class="card mt-4 p-4">
        <h4 class="text-center">Chi tiết người dùng</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Tên người dùng:</label>
                    <div class="col-sm-8">
                        <p>@Model.first_name @Model.last_name</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Địa chỉ:</label>
                    <div class="col-sm-8">
                        <p>@Model.address</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Số điện thoại:</label>
                    <div class="col-sm-8">
                        <p>@Model.phone</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Email:</label>
                    <div class="col-sm-8">
                        <p>@Model.email</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Quyền hạn:</label>
                    <div class="col-sm-8">
                        @if (Model.role == 1)
                        {
                            <p> Admin</p>

                        }
                        else
                        {
                            <p> Khách hàng</p>
                        }

                    </div>
                </div>
            </div>
    </div>

    <div class="text-center my-4">
        @using (Html.BeginForm("Restore", "AdminUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-success btn-lg">Khôi phục</button>
        }
    </div>
</div>


