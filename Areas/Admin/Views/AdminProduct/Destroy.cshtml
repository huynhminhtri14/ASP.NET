@model HuynhMinhTri_2122110256.Models.Product

@{
    ViewBag.Title = "Destroy";
}
<div class="container text-center">
    <div class="mt-4">
        <h2 class="text-center">Xóa sản phẩm ra khỏi cơ sở dữ liệu</h2>

        <div class="card text-center p-4">
            <h4 class="text-danger text-center">Bạn có chắc chắn muốn xóa vĩnh viễn sản phẩm này?</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên sản phẩm:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

            <div class="form-actions">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">Xóa</button>
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>

    <!-- Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteLabel">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này không thể hoàn tác.
                </div>
                <div class="modal-footer">
                    @using (Html.BeginForm("Destroy", "AdminProduct", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.Id)
                        <button type="submit" class="btn btn-danger">Xóa</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    }
                </div>
            </div>
        </div>
    </div>

