@model HuynhMinhTri_2122110256.Models.Product
@{
    ViewBag.Title = "Restore";
}

<div class="container mt-3">
    <h2 class="text-success text-center">Khôi phục sản phẩm</h2>

    <h3 class="text-center text-warning">Bạn chắc chắn muốn khôi phục sản phẩm này?</h3>

    <div class="card mt-4 p-4">
        <h4 class="text-center">Chi tiết sản phẩm</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Tên sản phẩm:</label>
                    <div class="col-sm-8">
                        <p>@Html.DisplayFor(model => model.Name)</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Thuộc sản phẩm:</label>
                    <div class="col-sm-8">
                        @if (Model.TypeId == 1)
                        {
                            <p> sản phẩm phổ biến</p>

                        }
                        else
                        {
                            <p> sản phẩm mới</p>
                        }

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 font-weight-bold">Mô tả:</label>
                    <div class="col-sm-8">
                        <p>@Html.DisplayFor(model => model.Description)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-2 font-weight-bold">Hình ảnh:</label>
                    <div class="col-sm-10">
                        <img src="~/Content/images/product/@Model.Image" alt="Product Image" class="img-fluid" style="max-width: 200px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center my-4">
        @using (Html.BeginForm("Restore", "AdminProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-success btn-lg">Khôi phục</button>
        }
    </div>
</div>



